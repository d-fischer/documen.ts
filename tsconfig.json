{
	"compilerOptions": {
		"outDir": "build/dist",
		"module": "es2015",
		"target": "es5",
		"lib": ["es6", "es2017", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"plugins": [
			{
				"name": "tslint-language-service",
				"ignoreDefinitionFiles": true
			}
		]
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"config"
	]
}
